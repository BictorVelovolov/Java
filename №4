package com.example.demo2;
import java.util.Scanner;

public class HelloApplication {
    public static void main(String[]args){
        Scanner in = new Scanner(System.in);
        int a, b, k;
        a = in.nextInt();
        b = in.nextInt();
        k = 0;
        while(a >= b) {
            a = a - b;
            k++;
        }
        System.out.print(k + " " + a);
    }
}
